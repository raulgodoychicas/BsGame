<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appworld.gogogo.bsgame.fragments.OverviewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:weightSum="1">

        <Button
            android:text="Spielen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:id="@+id/overwiew_start_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/overview_fieldsize_prompt"
            android:textSize="@dimen/padding"
            android:layout_height="wrap_content"
            android:id="@+id/overview_textView_Feldgröße"
            android:layout_weight="0.20"
            android:layout_above="@+id/overview_choosefieldsize"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/overview_choosefieldsize"
            android:entries="@array/overview_size_array"
            android:dropDownWidth="match_parent"
            android:layout_marginBottom="13dp"
            android:layout_above="@+id/overview_textView_ModusWaehlen"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/overview_spinner_gamemode"
            android:entries="@array/overview_game_mode"
            android:layout_marginBottom="30dp"
            android:layout_above="@+id/overwiew_start_button"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/overview_game_mode_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/padding"
            android:id="@+id/overview_textView_ModusWaehlen"
            android:layout_above="@+id/overview_spinner_gamemode"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/overview_username"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:id="@+id/overview_textView_username" />

    </RelativeLayout>


</FrameLayout>
