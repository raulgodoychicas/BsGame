<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context="appworld.gogogo.bsgame.fragments.OverviewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="@dimen/padding">

        <TextView
            android:id="@+id/overview_textview_fieldsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/overview_fieldsize_prompt"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/textsize_normal"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/overview_choosefieldsize"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/overview_textview_fieldsize"
            android:layout_marginLeft="-12dp"
            android:dropDownWidth="match_parent"
            android:entries="@array/overview_size_array" />

        <TextView
            android:id="@+id/overview_textview_moduswaehlen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/overview_choosefieldsize"
            android:layout_marginTop="16dp"
            android:text="@string/overview_game_mode_prompt"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/textsize_normal"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/overview_spinner_gamemode"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/overview_textview_moduswaehlen"
            android:layout_marginLeft="-12dp"
            android:entries="@array/overview_game_mode_array" />

        <Button
            android:id="@+id/overview_help_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/overwiew_introduction_button"
            android:layout_below="@+id/overview_spinner_gamemode"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:text="\?"
            android:textSize="48dp" />

        <Button
            android:id="@+id/overwiew_start_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/overview_help_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Spiel starten" />

        <Button
            android:id="@+id/overwiew_introduction_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/overwiew_start_button"
            android:layout_centerHorizontal="true"
            android:text="Anleitung"
            android:textSize="8sp"
            android:textStyle="italic" />

    </RelativeLayout>


</ScrollView>


