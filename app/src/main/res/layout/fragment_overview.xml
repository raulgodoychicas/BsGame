<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appworld.gogogo.bsgame.fragments.OverviewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:weightSum="1">

        <TextView
            android:text="Wählen Sie die Feldgröße aus:"
            android:layout_width="wrap_content"
            android:textSize="@dimen/padding"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:id="@+id/overview_textView_Feldgröße"
            android:layout_weight="0.20"
            android:layout_alignStart="@+id/overview_textView_ModusWaehlen"
            android:layout_marginTop="28dp" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:id="@+id/overview_spinner_gamemode"
            android:entries="@array/overview_game_mode"
            android:layout_below="@+id/overview_textView_ModusWaehlen"
            android:layout_alignStart="@+id/overview_textView_ModusWaehlen" />

        <Spinner
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/overview_choosefieldsize"
            android:entries="@array/overview_size_array"
            android:prompt="@string/fieldsize_prompt"
            android:dropDownWidth="match_parent"
            android:layout_below="@+id/overview_textView_Feldgröße"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Wählen Sie bitte einen Spielmodus aus:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/padding"
            android:layout_marginTop="11dp"
            android:id="@+id/overview_textView_ModusWaehlen"
            android:layout_below="@+id/overview_choosefieldsize"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/overview_textView_Feldgröße"
            android:layout_marginStart="21dp"
            android:layout_marginBottom="103dp"
            android:id="@+id/overwiew_start_button" />

    </RelativeLayout>


</FrameLayout>
