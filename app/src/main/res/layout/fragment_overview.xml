<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appworld.gogogo.bsgame.fragments.OverviewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:weightSum="1">

        <TextView
            android:text="Wählen Sie bitte einen Spielmodus aus:"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginTop="63dp"
            android:id="@+id/textView_ModusWaehlen"
            android:layout_alignParentTop="true" />

        <TextView
            android:text="Wählen Sie die Feldgröße aus:"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Feldgröße"
            android:layout_weight="0.20"
            android:layout_below="@+id/spinner"
            android:layout_alignStart="@+id/textView_ModusWaehlen"
            android:layout_marginTop="28dp" />

        <Spinner
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/choose_fieldsize"
            android:entries="@array/size_array"
            android:prompt="@string/fieldsize_prompt"
            android:dropDownWidth="match_parent"
            android:layout_below="@+id/textView_Feldgröße"
            android:layout_alignStart="@+id/textView_Feldgröße"
            android:layout_marginTop="22dp" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:id="@+id/spinner"
            android:entries="@array/game_mode"
            android:layout_below="@+id/textView_ModusWaehlen"
            android:layout_alignStart="@+id/textView_ModusWaehlen" />


    </RelativeLayout>


</FrameLayout>
