<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="appworld.gogogo.bsgame.fragments.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/fragment_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="Dummy"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_textview"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/rot_button"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:text="@string/rot_button_text"
            android:textSize="24sp" />


        <Button
            android:id="@+id/ende_button"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/ende_button_text"
            android:textSize="24sp" />

        <Button
            android:id="@+id/gelb_button"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/gelb_button_text"
            android:layout_marginLeft="24dp"
            android:textSize="24sp" />

    </LinearLayout>


</RelativeLayout>
